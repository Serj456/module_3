def send_email(message, recipient, *,sender = "university.help@gmail.com"):
    sobaka = '@'
    end_adress = ['.COM', '.ru', '.net']
    if any(word_recip.casefold() in recipient.casefold() for word_recip in end_adress):
        pass
    else:
        print(f"Невозможно отправить письмо с адреса {sender} на адрес {recipient}")
        return
    if any(word_send.casefold() in sender.casefold() for word_send in end_adress):
        pass
    else:
        print(f"Невозможно отправить письмо с адреса {sender} на адрес {recipient}")
        return
    if sobaka in recipient and sobaka in sender:
        pass
    else:
        print(f"Невозможно отправить письмо с адреса {sender} на адрес {recipient}")
        return
    if sender.casefold() == recipient.casefold():
        print("Нельзя отправить письмо самому себе!")
        return
    else:
        pass
    if sender.casefold() == "university.help@gmail.com":
        print(f"Письмо успешно отправлено с адреса {sender} на адрес {recipient}.")
    else:
        print(f"НЕСТАНДАРТНЫЙ ОТПРАВИТЕЛЬ! Письмо отправлено с адреса {sender} на адрес {recipient}.")

send_email('Это сообщение для проверки связи', 'vasyok1337@gmail.com')
send_email('Вы видите это сообщение как лучший студент курса!', 'urban.fan@mail.ru', sender='urban.info@gmail.com')
send_email('Пожалуйста, исправьте задание', 'urban.student@mail.ru', sender='urban.teacher@mail.uk')
send_email('Напоминаю самому себе о вебинаре', 'urban.teacher@mail.ru', sender='urban.teacher@mail.ru')
